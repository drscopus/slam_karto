<launch>
  <param name="/use_sim_time" value="true"/>
  <include file="$(find 2dnav_slam_stage)/config/move_base.xml"/>
  <node pkg="stage" type="stageros" name="stageros" args="-g $(find 2dnav_stage)/worlds/willow-pr2-5cm.world" respawn="false" >
    <param name="base_watchdog_timeout" value="0.2"/>
  </node>
  <!--include file="$(find 2dnav_slam_stage)/config/nav_view.xml"/-->
  <!--include file="$(find pr2_navigation_global)/rviz/rviz_move_base.launch"/-->
  <node pkg="karto" type="slam_karto" name="slam_karto" output="screen">
    <param name="resolution" value="0.025"/>
    <remap from="scan" to="base_scan"/>
  </node>

  <node pkg="explore_wg" type="explore" respawn="false" name="explore"
output="screen" >
    <rosparam file="$(find 2dnav_slam_stage)/config/costmap_common_params.yaml" command="load"
ns="explore_costmap" />
    <rosparam file="$(find 2dnav_slam_stage)/config/explore_costmap_params.yaml" command="load" />
    <param name="loop_closure_loop_dist_min" value="20.0"/>
    <param name="loop_closure_loop_dist_max" value="30.0"/>
    <param name="loop_closure_addition_dist_min" value="1.5"/>
    <param name="loop_closure_slam_entropy_max" value="1.5"/>
    <param name="graph_update_frequency" value="1.0"/>
    <param name="potential_scale" value="0.0"/>
    <param name="orientation_scale" value="0.0"/>
    <!--remap from="slam_entropy" to="slam_karto/entropy"/-->
  </node>

</launch>

